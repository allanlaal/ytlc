{
	"manifest_version": 2,
	"name": "YouTube Live Comments",
	"version": "0.5.5",
	"description": "Shows YouTube comments with timestamps on the video during playback.",
	"permissions": ["storage", "https://www.googleapis.com/*"],
	"icons": {
		  "16":  "logo/logo16.png",
		  "32":  "logo/logo32.png",
		  "48":  "logo/logo48.png",
		  "64":  "logo/logo64.png",
		 "128":  "logo/logo128.png",
		 "256":  "logo/logo256.png",
		 "512":  "logo/logo512.png",
		"1024":  "logo/logo1024.png"
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"content_scripts": [{
		"matches": ["*://*.youtube.com/*"],
		"js": ["ytlc.js"]
	}],
	"background": {"scripts": ["bg.js"]},
	"applications": {
		"gecko": {"id": "{5197e2c1-ab78-4500-bfe4-e8d37b486d4d}"}
	}
}
